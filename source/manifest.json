{
  "manifest_version": 2,

  "name": "Checkpoint",
  "description": "This extension allows users to place checkpoints on webpages and loop through them",
  "version": "1.0",

  "background":{
    "scripts": ["events.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Settings"
  },
  "permissions": [
    "activeTab",
    "http://*/*", 
    "https://*/*"  ]
}