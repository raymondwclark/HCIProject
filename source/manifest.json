{
  "manifest_version": 2,

  "name": "Checkpoint",
  "description": "This extension allows users to place checkpoints on webpages and loop through them",
  "version": "1.0",
  "icons": {
    "16": "icon1.png",

    // this icon is what shows up in the chrome extensions menu
    "128": "icon1.png"
  },

  "background":{
    "scripts": ["bg.js"]
    //"persistent": false
  },

  "browser_action": {
    "default_icon": "icon1.png",
    "default_popup": "popup.html",
    "default_title": "Settings"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "contextMenus",
    "storage"
  ],

  "content_scripts": [ {
    "matches": [
      "http://*/*", 
      "https://*/*"
    ],

    "js": ["bower_components/jquery/dist/jquery.js", "events.js", "bower_components/jquery-nearest/src/jquery.nearest.js"],

    "all_frames": true,

    "run_at" : "document_end"

  }],

  "web_accessible_resources": ["icon1.png"]

}