{
  "manifest_version": 2,

  "name": "Checkpoint",
  "description": "This extension allows users to place checkpoints on webpages and loop through them",
  "version": "1.0",

  "background":{
    "scripts": ["bg.js"]
    //"persistent": false
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Settings"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "contextMenus"
  ],

  "content_scripts": [ {
    "matches": [
      "http://*/*", 
      "https://*/*"
    ],

    "js": ["events.js"],
    "all_frames": true

  }]

}